@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FixItFinderDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FixItFinderDemo.styles.css" asp-append-version="true" />

    <style>
        .header-container {
            background-color: #2d6a4f;
            color: white;
            padding: 16px 24px;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-sizing: border-box;
        }

        .header-content {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            text-decoration: none;
            color: white;
        }

        .header-buttons {
            display: flex;
            margin-left:auto;
            align-items: center;
            gap: 16px;
        }

        .sign-in-btn {
            background: none;
            border: none;
            color: #a3b18a;
            font-size: 16px;
            cursor: pointer;
            transition: color 0.3s;
        }

            .sign-in-btn:hover {
                color: #588157;
            }

        .sign-up-btn {
            background-color: #40916c;
            border: none;
            color: white;
            padding: 10px 16px;
            border-radius: 50px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .sign-up-btn:hover {
                background-color: #2d6a4f;
            }

        .notification-container {
            position: relative;
            display: block;
        }

        .notification-icon {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: white;
        }

        .notification-dropdown {
            display: none;
            position: absolute;
            top: 40px;
            right: 0;
            background-color: white;
            color: black;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            padding: 8px;
            border-radius: 4px;
            width: 250px;
        }

        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .notification-item {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

            .notification-item button {
                margin-top: 5px;
                padding: 5px;
                font-size: 14px;
                cursor: pointer;
            }

        .accept-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 5px;
            cursor: pointer;
        }

        .reject-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header class="header-container">
        <div class="header-content">
            <a href="/" class="logo" aria-label="Go to homepage">
                FixItFinder
            </a>
            
            <div class="header-buttons">
                <div class="auth-buttons" id="auth-section">
                     @if (HttpContextAccessor.HttpContext?.Session.GetString("LoggedIn")== "True") 
                     { 
                        <div class="user-profile">
                            <img src=@Context.Session.GetString("Image") alt="User Profile" class="profile-pic">
                        </div>
                        <div class="notification-container">
                            <button class="notification-icon" id="notification-btn">ðŸ””</button>
                            <div class="notification-dropdown" id="notification-dropdown">
                                <p>Loading notifications...</p>
                            </div>
                        </div>
                     } 
                     else 
                     { 
                         <button class="sign-in-btn" onclick="window.location.href='@Url.Action("Login", "Account")'"> 
                             Sign In 
                         </button> 
                         <button class="sign-up-btn" onclick="window.location.href='@Url.Action("SignUp", "Account")'"> 
                             Get Started 
                         </button> 
                     } 
                </div>
            </div>
        </div>
    </header>

    <div class="container" style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Post Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBody">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            loadNotifications();

            $("#notification-btn").click(function (event) {
                event.stopPropagation();
                $("#notification-dropdown").toggle();
            });

            $(document).click(function (event) {
                if (!$(event.target).closest("#notification-btn, #notification-dropdown").length) {
                    $("#notification-dropdown").hide();
                }
            });

            function loadNotifications() {
                $.ajax({
                    url: "/PostEngagement/GetNotifications",
                    type: "GET",
                    success: function (data) {
                        if (data.length === 0) {
                            $("#notification-dropdown").html("<p>No new notifications</p>");
                        } else {
                            let html = "";
                            data.forEach(notification => {
                                let notificationText = "";

                                if (notification.HasActions) {
                                    notificationText = `
                                        <p><strong>${notification.EngagedUserName}</strong> wants to do
                                        <a href="#" class="view-post" data-post-id="${notification.PostId}">this service</a>.
                                        Do you want to accept?</p>
                                        <button class="accept-btn" data-engagement-id="${notification.PostEngagementId}">Accept</button>
                                        <button class="reject-btn" data-engagement-id="${notification.PostEngagementId}">Reject</button>`;
                                } else {
                                    notificationText = `<p><strong>${notification.ServiceProviderName}</strong> has agreed to provide service for
                                        <a href="#" class="view-post" data-post-id="${notification.PostId}">this</a></p>`;
                                }

                                html += `<div class='notification-item'>${notificationText}</div>`;
                            });

                            $("#notification-dropdown").html(html);
                        }
                    }
                });
            }

            $(document).on("click", ".view-post", function (event) {
                event.preventDefault();
                let postId = $(this).data("post-id");
                openPostModal(postId);
            });

            function openPostModal(postId) {
                $.ajax({
                    url: "/Post/GetPostDetails",
                    type: "GET",
                    data: { id: postId },
                    success: function (data) {
                        $("#modalTitle").text(data.title);
                        $("#modalBody").html(data.description);
                        $("#postModal").modal("show");
                    },
                    error: function () {
                        console.log("Error fetching post details");
                    }
                });
            }

            $(document).on("click", ".accept-btn", function () {
                let engagementId = $(this).data("engagement-id");
                $.ajax({
                    url: "/PostEngagement/AcceptApplication",
                    type: "POST",
                    data: { id: engagementId },
                    success: function () {
                        alert("Application accepted.");
                        loadNotifications();
                    }
                });
            });

            $(document).on("click", ".reject-btn", function () {
                let engagementId = $(this).data("engagement-id");
                $.ajax({
                    url: "/PostEngagement/RejectApplication",
                    type: "POST",
                    data: { id: engagementId },
                    success: function () {
                        alert("Application rejected.");
                        loadNotifications();
                    }
                });
            });
        });
    </script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
