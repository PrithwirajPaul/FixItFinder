
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
 <style>
        body {
            background-color: white;
            color: black;
            text-align: center;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .btn-back {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #28a745;
            color: white;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
        }
        .grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }
    
        .card {
            background-color: #3CB371;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }
        .card h2 {
            font-size: 20px;
            font-weight: bold;
        }
        .card p {
            font-size: 14px;
            color: #2E8B57;
        }
    </style>
    <div class="container">
        <h1 class="mb-4">Find a Professional</h1>
        <div class="grid">
            <div class="card">
                <h2><a href="@Url.Action("AssemblyPage", "Account")">Assembling</a></h2>
                <p>Hire People Who Will Assemble things for you</p>
            </div>
            <div class="card">
                <h2><a href="@Url.Action("MountingPage", "Account")">Mounting</a></h2>
                <p>Hire People Who Will Mount and Fix objects for you</p>
            </div>
            <div class="card" >
                <h2><a href="@Url.Action("CleaningPage", "Account")">Cleaning</a></h2>
                <p>Hire People Who Will Clean things for you</p>
            </div>
            <div class="card" >
                <h2><a href="@Url.Action("HouseRepairs", "Account")">House Repairs</a></h2>
                <p>Hire People Who Will Repair things for you</p>
            </div>
            <div class="card" >
                <h2><a href="@Url.Action("ElectritiansPage", "Account")">Electricians</a></h2>
                <p>Hire People Who Will Fix and Install Electric things for you</p>
            </div>
            <div class="card">
                <h2><a href="@Url.Action("PlumbingPage", "Account")">Plumbing</a></h2>
                <p>Hire People Who Will Perform Plumbing jobs for you</p>
            </div>
            <div class="card" >
                <h2><a href="@Url.Action("PainterPage", "Account")">Painter</a></h2>
                <p>Hire People Who Will Paint for you</p>
            </div>
            <div class="card" >
                <h2><a href="@Url.Action("CarpenterPage", "Account")">Carpenter</a></h2>
                <p>Hire People Who Will Build and Repair Furniture for you</p>
            </div>
        </div>
    </div>
