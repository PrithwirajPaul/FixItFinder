@model List<FixItFinderDemo.Models.Post>

@{
    ViewBag.Title = "Select Your Assembler";
}

<style>
    body {
        background-color: black;
        color: white;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 16px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 16px;
    }

    .card {
        background-color: #3CB371;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s;
    }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .card h2 {
            font-size: 20px;
            font-weight: bold;
        }

        .card p {
            font-size: 14px;
            color: #2E8B57;
        }

    .post-status {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background-color: #28a745; 
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
    }

    .status-pending {
        background-color: #f39c12;
    }
    .status-active {
        background-color: #28a745;
    }
    .status-completed {
        background-color: #3498db;
    }
    .status-cancelled {
        background-color: #e74c3c;
    }

    .create-post {
        background-color: #222;
        padding: 20px;
        border-radius: 10px;
        margin-top: 40px;
    }

        .create-post input,
        .create-post textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .create-post button {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

</style>

<button class="btn-back" onclick="window.history.back()"><i class="fa fa-arrow-left"></i></button>

@if (ViewBag.Role == "Customer")
{
    <div class="create-post">
        <h3>Create a Post</h3>
        <form asp-action="CreatePost" method="post">
            @Html.AntiForgeryToken()

            <textarea name="Description" placeholder="Enter your service description..." required></textarea>
            <span asp-validation-for="@Model.FirstOrDefault().Description" class="text-danger"></span>

            <input type="hidden" name="UserId" value="@ViewBag.UserId">

            <input type="number" name="Price" placeholder="Enter the price for your service" required step="0.01">
            <span asp-validation-for="@Model.FirstOrDefault().Price" class="text-danger"></span>

            <button type="submit">Submit Post</button>
        </form>
    </div>
}

<div class="container">
    <h2 class="mb-4">Select Your Assembler</h2>

    @if (Model != null && Model.Any())
    {
        <div class="grid">
            @foreach (var post in Model)
            {
                <div class="card">
                    <img src="@post.User.Worker_Profile.Image" alt="@post.User.Name">
                    <h2>
                        <a asp-controller="Profile" asp-action="Index" asp-route-userId="@post.UserId">
                            @post.User.Name
                        </a>
                    </h2>
                    <p>⭐ @post.User.Worker_Profile.Rating (from reviews)</p>
                    <p>@post.Description</p>
                    <p><strong>$@post.Price</strong></p>
                    <div class="post-status
                        @(post.Post_Status == 0 ? "status-pending" :
                          post.Post_Status == 1 ? "status-active" :
                          post.Post_Status == 2 ? "status-completed" :
                          "status-cancelled")">
                        @(post.Post_Status == 0 ? "Pending" :
                            post.Post_Status == 1 ? "Active" :
                            post.Post_Status == 2 ? "Completed" :
                            "Cancelled")
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No posts available.</p>
    }
</div>
